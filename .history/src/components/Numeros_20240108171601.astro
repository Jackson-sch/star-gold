---
import { CountUp } from "./CountUp";
import NumerosItem from "./NumerosItem.astro";
---

<section class="max-w-6xl mx-auto py-20 px-20">
  <h2
    class="text-3xl lg:text-6xl font-tomaso text-center text-balance mb-10 lg:mb-20"
  >
    STAR GOLD en números
  </h2>
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-y-10">
    <NumerosItem title="Usuarios">
      +<CountUp client:visible initial={0} final={190} />
    </NumerosItem>
    <NumerosItem title="eventos">
      +<CountUp client:visible initial={0} final={43} />
    </NumerosItem>
    <NumerosItem title="trayectoria">
      <CountUp client:visible initial={0} final={3.2} decimals={1} />M€
    </NumerosItem>
  </div>
</section>
